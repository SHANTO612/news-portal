				{
					"name": "Admin Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.token) {",
									"    pm.environment.set(\"admin_token\", jsonData.token);",
									"    var base64Url = jsonData.token.split('.')[1];",
									"    var base64 = base64Url.replace(/-/g, '+').replace(/_/g, '/');",
									"    var jsonPayload = decodeURIComponent(atob(base64).split('').map(function(c) {",
									"        return '%' + ('00' + c.charCodeAt(0).toString(16)).slice(-2);",
									"    }).join(''));",
									"    var tokenData = JSON.parse(jsonPayload);",
									"    pm.environment.set(\"admin_id\", tokenData.id);",
									"    console.log(\"Admin token and ID saved\");",
									"}",
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"shantocse612@gmail.com\",\n    \"password\": \"shanto612\"\n}",
							"options": {
								"raw": {
